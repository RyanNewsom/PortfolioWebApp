@model Portfolio.Models.BlogLabelViewModel

@{
    ViewData["Title"] = "Personal Blog";
}


<div class="container">
    <div class="jumbotron">
        <div class="container">
            <h1 class="display-3 text-center">Colorado Native, Software Engineer, Adventurer</h1>
            <p class="lead text-center">I write about many different topics ranging from software development to living an active lifestyle. If you have any cool ideas for topics, contact me!</p>
        </div>
    </div>

    <form asp-controller="Blogs" asp-action="Index" method="get">
        <p>
            <select asp-for="blogLabel" asp-items="Model.labels">
                <option value="">All</option>
            </select>

            Title: <input type="text" name="query">
            <input type="submit" value="Filter" />
        </p>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.blogs[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.blogs[0].ReleaseDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.blogs[0].Label)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.blogs[0].Body)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.blogs)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Label)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Body)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p>
        <a asp-action="Create">Create New</a>
    </p>

</div>

